[sendemail]
	smtpserver = /bin/msmtp
	aliasesfile = ~/.gitaliases.mutt
 	aliasfiletype = mutt
	assume8bitEncoding = UTF-8
[merge]
	stat = true
	renamelimit = 10000
[pull]
	ff = only
[push]
	default = simple
[alias]
	dc = diff --cached
	lo = log --pretty=format:'%C(yellow)%cd %C(green)%h %C(blue)%<(16)%aN%Creset %s %C(auto)%d%Creset' --decorate --date=short -n10
